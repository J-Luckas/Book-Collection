generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Models

model Author {
    id          String @id @default(uuid())
    name        String
    email       String @unique
    dateOfBirth DateTime

    // Relations
    books   Book[]

    @@map("authors")
}

model Book {
    id          String @id @default(uuid())
    title       String
    pages       Int
    authorId    String?
    author      Author? @relation(fields: [authorId], references: [id])
    publishedAt DateTime

    @@map("books")
}
